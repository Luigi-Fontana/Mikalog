<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mikalog | Admin Home</title>
    <link rel="stylesheet" href="dist/css/app.css">
</head>
<body>
    <header>
        <div class="container flex">
            <div class="header-left">
                <a href="/"><img src="https://external-content.duckduckgo.com/iu/?u=http%3A%2F%2Ffiles.softicons.com%2Fdownload%2Fapplication-icons%2Forb-icons-by-deleket%2Fpng%2F300x300%2FBlogger.png&f=1&nofb=1" alt="logo"></a>
            </div>
            <div class="header-right">
                <form action="/logout?_method=DELETE" method="POST">
                    <button type="submit">Logout</button>
                </form>
            </div>
        </div>
    </header>
    <main>
        <div class="container">
            <div class="row">
                <button class="btn btn-new"><a href="/articles/new">New Article</a></button>
            </div>
            <div class="row">
                <table>
                    <thead>
                        <tr>
                            <th>TITLE</th>
                            <th>DATE</th>
                            <th>DESCRIPTION</th>
                            <th colspan="3">ACTIONS</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% articles.forEach(article => { %>
                            <tr>
                                <td><%= article.title %></td>
                                <td><%= article.createdAt.toLocaleDateString() %></td>
                                <td><%= article.description %></td>
                                <td><button class="btn btn-show"><a href="articles/<%= article.slug %>">Details</a></button></td>
                                <td><button clasS="btn btn-edit"><a href="articles/edit/<%= article.id %>">Edit</a></button></td>
                                <td>
                                    <form action="/articles/<%= article.id %>?_method=DELETE" method="POST" class="d-inline">
                                        <div class="form-button">
                                            <button type="submit" class="btn btn-delete">Delete</button>
                                        </div>
                                    </form>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </main>
</body>
</html>