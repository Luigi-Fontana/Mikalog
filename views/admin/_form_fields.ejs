<div class="form-group">
    <fieldset>
        <legend>Title</legend>
    </fieldset>
    <input required value="<%= article.title %>" type="text" name="title" class="form-control">
</div>
<div class="form-group">
    <fieldset>
        <legend>Description</legend>
        <textarea name="description" class="form-control"><%= article.description %></textarea>
    </fieldset>
</div>
<div class="form-group">
    <fieldset>
        <legend>Markdown</legend>
        <textarea required name="markdown" class="form-control" rows="10"><%= article.markdown %></textarea>
    </fieldset>
</div>
<div class="mt-4">
    <a href="/articles" class="btn btn-secondary">Cancel</a>
    <button type="submit" class="btn btn-success">Save</button>
</div>
