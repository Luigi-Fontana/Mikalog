<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mikalog | Home</title>
    <link rel="stylesheet" href="dist/css/app.css">
</head>
<body>
    <header>
        <div class="container flex">
            <div class="header-left">
                <a href="/"><img src="https://external-content.duckduckgo.com/iu/?u=http%3A%2F%2Ffiles.softicons.com%2Fdownload%2Fapplication-icons%2Forb-icons-by-deleket%2Fpng%2F300x300%2FBlogger.png&f=1&nofb=1" alt="logo"></a>
            </div>
            <div class="header-right">
                <button><a href="/login">Login</a></button>
                <button><a href="/register">Register</a></button>
            </div>
        </div>
    </header>
    <main>
        <div class="container">
            <h1>Articles</h1>
            <% articles.forEach(article => { %>
                <div class="card">
                    <h2><%= article.title %></h2>
                    <h3><%= article.description %></h3>
                    <small><%= article.createdAt.toLocaleDateString() %></small>
                    <p><%= article.markdown %></p>
                </div>
            <% }) %>
        </div>
    </main>
</body>
</html>